<h2>先生登録</h2>
<%= form_for @teacher do |f| %>
  <div>
    <%= label_tag :name, "名前" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= label_tag :name, "メール" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= label_tag :name, "パスワード" %>
    <%= f.text_field :password %>
  </div>
  <div>
    <%= label_tag :name, "パスワード（確認）" %>
    <%= f.text_field :password_confirmation %>
  </div>
  <div>
    <%= label_tag :name, "電話番号" %>
    <%= f.text_field :tel %>
  </div>
  <div>
    <%= f.submit "送信" %>
  </div>
 <% end %>
