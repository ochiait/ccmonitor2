<h1>レッスン予約</h1>
  <h2>レッスン詳細</h>
  <div class="lesson_detail">
    <div class="label">レッスンID</div>
    <div class="value"><%= @lesson.id %></div>
    <div class="label">日付</div>
    <div class="value"><%= @lesson.date %></div>
    <div class="label">開始時刻</div>
    <div class="value"><%= @lesson.start_time %></div>
    <div class="label">終了時刻</div>
    <div class="value"><%= @lesson.end_time %></div>
    <div class="label">レッスン名</div>
    <div class="value"><%= @lesson.name %></div>
    <div class="label">料金</div>
    <div class="value"><%= @lesson.price %></div>
    <div class="label">料金</div>
    <div class="value"><%= @lesson.comment %></div>
  </div>  
</div>
</div>
<h2>新規レッスン予約</h2>
<%= form_for @participant do |f| %>
  <div>
    <%= label_tag :name, "名前" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= label_tag :name, "アドレス" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= label_tag :name, "電話番号" %>
    <%= f.text_field :tel %>
  </div>
  <div>
    <%= f.submit "送信" %>
  </div>
 <% end %>